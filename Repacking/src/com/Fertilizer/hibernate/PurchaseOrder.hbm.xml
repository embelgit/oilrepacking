<?xml version="1.0"?>
 <!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" > 

    <hibernate-mapping>
    
    <class name="com.Fertilizer.hibernate.PurchaseOrderBean" 
    table="purchase_order" schema="oil"
    >
    
    	<id name="pkPoId" type="java.lang.Long" column="pk_purchase_order_id">
			<generator class="increment" />
		</id>

		<property
		name="fk_cat_id"
		type="java.lang.Long"
		column="fk_cat_id"
		not-null="true"
		update="false"
		insert="false"
		length="20"/>
		
		<property
		name="supplier"
		type="java.lang.Long"
		column="fk_supplier_id"
		not-null="true"
		update="false"
		insert="false"
		length="20"/>
		
		<property
		name="productID"
		type="java.lang.Long"
		column="fk_product_id"
		not-null="true"
		update="false"
		insert="false"
		length="20"/>
		
		<!-- <property
		name="dcNum"
		type="java.lang.Long"
		column="dc_number"
		
		length="20"/> -->
		
		
		<property 
		name="productName" 
		type="java.lang.String" 
		column="product_name"
		not-null="true" 
		length="128" />
		
			<property 
		name="unitName" 
		type="java.lang.String" 
		column="unit_name"
		length="128" />
		
		
		<property 
		name="manufacturer" 
		type="java.lang.String" 
		column="manufacturer"
		length="128" />
			
			
		<property 
		name="buyPrice" 
		type="java.lang.Double" 
		column="buy_price"
		not-null="true" 
		length="20" />
		
		<!-- <property 
		name="taxPercentage" 
		type="java.lang.Double" 
		column="tax_percentage"
		length="20" /> -->
		
		<property 
		name="mrp" 
		type="java.lang.Double" 
		column="mrp"
		length="20" />
		
		<!-- <property 
		name="taxAmount" 
		type="java.lang.Double" 
		column="tax_amount"
		length="20" /> -->
		
		<property 
		name="salePrice" 
		type="java.lang.Double" 
		column="sale_price"
		not-null="true" 
		length="20" />
		
		<property 
		name="weight" 
		type="java.lang.Double" 
		column="weight"
		not-null="true" 
		length="20" />
		
		<property 
		name="totalAmount" 
		type="java.lang.Double" 
		column="total_amount"
		not-null="true" 
		length="20" />
		
		<property
		name="quantity"
		type="java.lang.Long"
		column="quantity"
		length="20"/>
		
		<property
		name="poNumber"
		type="java.lang.Long"
		column="po_number"
		/>
		
		 <property
        name="insertDate"
        type="java.sql.Date"
        column="insert_date"
      
    	/>
   
   <property 
		name="gross" 
		type="java.lang.Double" 
		column="gross_total"
		not-null="true" 
		length="20" />
		
		
		<property 
		name="tokenRate" 
		type="java.lang.Double" 
		column="token_rate"
		not-null="true" 
		length="20" />
		
		
 <!-- ORM Mapping   	 -->
   <many-to-one
        name="SupplierDetailsBean"
        class="com.Fertilizer.hibernate.SupplierDetailsBean"
        not-null="true"
      cascade="all"
    >
    	    <column name="fk_supplier_id"  />
    </many-to-one> 
		

	<many-to-one
        name="CategoryDetailsBean"
        class="com.Fertilizer.hibernate.CategoryDetailsBean"
        not-null="true"
      cascade="all"
    >
    	    <column name="fk_cat_id"  />
    </many-to-one> 
		
	<many-to-one
        name="ProductDetailsBean"
        class="com.Fertilizer.hibernate.ProductDetailsBean"
        not-null="true"
      cascade="all"
    >
    	    <column name="fk_product_id"  />
    </many-to-one> 
		
		
		
		</class>
    </hibernate-mapping>